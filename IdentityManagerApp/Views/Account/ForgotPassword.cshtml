@model ForgotPasswordModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row col-md-10 offset-md-1">
    <h1 class="text-primary text-center pt-2">Forgot Password</h1>
    <form method="post" asp-controller="Account" asp-action="ForgotPassword" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <div class="border p-2 rounded">
            <p class="text-center">Forgot Password</p>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mt-2">
                <label asp-for="Email"></label>
                <div class="col-md-12 pt-1">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group pt-3">
                <div class="col-md-6 col-offset-md-3 text-end">
                    <button class="btn btn-success" type="submit">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.PartialAsync("_ValidationScriptsPartial");
    }
}

